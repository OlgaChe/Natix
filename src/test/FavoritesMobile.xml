<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="FavoritesMobile">
    <test name="Add to Favorites/Remove from Favorites">
        <classes>
            <class name="MobileTests.SignInScreenTest">
                <methods>
                    <include name="signInAndroid"/>
                </methods>
            </class>
            <class name="MobileTests.ShowDetailScreenTest">
                <methods>
                    <include name="addToFavoritesAndroid"/>
                    <include name="removeFromFavoritesAndroid"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>

